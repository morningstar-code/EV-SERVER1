{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/client", "@types/node", "webpack-env"],
    "lib": ["ES2020"],
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@cpx/*": ["shared/cpx/*"]  
    }
  },
  "include": ["./**/*", "../shared", "../../../ts-shared/types/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}